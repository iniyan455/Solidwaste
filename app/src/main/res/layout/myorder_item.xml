<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cv_order"
        android:elevation="8dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/white"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1.4"
            android:gravity="center"
            android:background="#dee2e5"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvMonth"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:text="May "/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="14dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:text=" 20  "/>


            <TextView
                android:id="@+id/tvYear"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:text="2018"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:text="11:03 PM"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="3.6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:gravity="right"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:text="OrderId: 90"/>


            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Name : Raj "/>
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:text="Address : 2/234,Krishnagiri "/>
            <TextView
                android:id="@+id/tvTotQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:text="Total Qantity :3 "/>
            <TextView
                android:id="@+id/tvProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:text="Product : waste paper "/>

            <TextView
                android:id="@+id/tvMobileno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:text="Mobie No :875745454"/>


            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
android:layout_marginRight="6dp"
                android:text="Status : Pending"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
