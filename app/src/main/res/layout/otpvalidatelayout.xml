<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/enterotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:autofillHints="@string/enterotp"
        android:hint="@string/enterotp"
        android:inputType="number"
        android:maxLength="6"
        android:textColorHint="@android:color/holo_blue_dark"
        android:visibility="visible"
        app:met_clearButton="true"
        app:met_floatingLabel="normal"
        app:met_floatingLabelAlwaysShown="false"
        app:met_floatingLabelAnimating="true"
        app:met_floatingLabelPadding="8dp"
        app:met_floatingLabelText="@string/enterotp"
        app:met_floatingLabelTextColor="@android:color/holo_blue_dark"
        app:met_floatingLabelTextSize="14dp"
        app:met_iconLeft="@drawable/otp"
        app:met_iconPadding="8dp"
        app:met_maxCharacters="6"
        app:met_minCharacters="6"

        app:met_primaryColor="@android:color/holo_blue_dark"
        app:met_singleLineEllipsis="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:text="cancel"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        android:id="@+id/cancel"
        android:layout_height="wrap_content" />


</LinearLayout>